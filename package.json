{
  "name": "uw-21-22-dev-connect",
  "version": "1.0.0",
  "description": "Social Network for the UW-21-22 Code Camp",
  "main": "server.js",
  "scripts": {
    "start": "node server react-scripts build --prefix client",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-post-build": "NPM_CONFIG_PRODUCTION=false npm install --prefix client &&npm run build --prefix client",
    "build": "cd client && npm run build"
  },
